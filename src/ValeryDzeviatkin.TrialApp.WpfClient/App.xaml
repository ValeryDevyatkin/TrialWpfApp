<base:ApplicationBase
            x:Class = "ValeryDzeviatkin.TrialApp.WpfClient.App"
            x:TypeArguments = "views:MainWindow, viewModels:MainViewModel"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:base = "clr-namespace:ValeryDzeviatkin.MVVM.Base;assembly=ValeryDzeviatkin.MVVM"
            xmlns:views = "clr-namespace:ValeryDzeviatkin.TrialApp.WpfClient.Views"
            xmlns:viewModels = "clr-namespace:ValeryDzeviatkin.TrialApp.WpfClient.ViewModels"
            x:ClassModifier="internal">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source = "pack://application:,,,/Theme/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>

</base:ApplicationBase>
